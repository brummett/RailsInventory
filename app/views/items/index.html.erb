<h1>Items</h1>
<%= link_to 'Create new item', new_item_path %>
<table>
    <tr>
        <th></th>
        <th>Name</th>
        <th>SKU</th>
        <th>Barcode</th>
        <th>Cost cents</th>
        <th>Price cents</th>
        <th></th>
    </tr>
    <% @items.each do |item| %>
        <tr>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to item.name, item_path(item) %></td>
            <td><%= item.sku %></td>
            <td><%= item.barcode %></td>
            <td><%= item.cost_cents %></td>
            <td><%= item.price_cents %></td>
            <td><%= link_to 'Delete', item_path(item),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

