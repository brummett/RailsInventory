<%= form_for @customer do |f| %>
    <% if @customer.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@customer.errors.count, 'error') %> prohibited this customer from saving
            </h2>
            <ul>
                <% @customer.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label 'First name' %> <%= f.text_field :first_name %>
        <br>
        <%= f.label 'Last name' %> <%= f.text_field :last_name %>
        <br>
        <%= f.label :Address %> <%= f.text_area :address %>
        <br>
        <%= f.label 'Is taxable' %> <%= f.check_box :is_taxable %>
        <br>
        <%= f.label 'Phone number' %> <%= f.text_field :phone_number %>
        <br>
        <%= f.label 'Alternate Phone' %> <%= f.text_field :alternate_phone_number %>
        <br>
        <%= f.label :Email %> <%= f.text_field :email %>
        <br>
        <%= f.label :Notes %> <%= f.text_area :notes %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
